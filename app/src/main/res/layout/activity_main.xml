<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#b0c4de"
    android:textColor="@color/white"
    >
    <!--#dbffdb・・・カラーコード-->

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/calctext"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:gravity="right|bottom"
        android:textSize="40dp"
        android:background="@color/cardview_dark_background"
        android:text="0" /><!--数字が出るところ-->
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <TextView
        android:id="@+id/calctext2"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:gravity="right|bottom"
        android:textSize="40dp"
        android:background="@color/cardview_dark_background"
        android:text="0" /><!--答えが出るところ-->

    <Space
        android:layout_width="match_parent"
        android:layout_height="200dp" />
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btn7"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#444444"
            android:textColor="@color/white"
            android:text="7" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#444444"
            android:textColor="@color/white"
            android:text="8" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#444444"
            android:textColor="@color/white"
            android:text="9" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnwaru"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#444444"
            android:textColor="@color/white"
            android:text="÷" />
    </LinearLayout><!-- 7,8,9,÷のボタン -->
    <Space
        android:layout_width="wrap_content"
        android:layout_height="1dp"
 />
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btn4"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#444444"
            android:textColor="@color/white"
            android:text="4" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#444444"
            android:textColor="@color/white"
            android:text="5" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#444444"
            android:textColor="@color/white"
            android:text="6" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnkakeru"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#444444"
            android:textColor="@color/white"
            android:text="×" />
    </LinearLayout><!-- 4,5,6,×のボタン -->
    <Space
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        />
    <LinearLayout
    android:layout_width="300dp"
    android:layout_height="75dp"
    android:layout_gravity="center"
    android:orientation="horizontal">


        <Button
            android:id="@+id/btn1"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#444444"
            android:textColor="@color/white"
            android:onClick="onClick"
            android:text="1" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#444444"
            android:textColor="@color/white"
            android:onClick="onClick"
            android:text="2" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:backgroundTint="#444444"
        android:textColor="@color/white"
        android:text="3" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btnmin"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:backgroundTint="#444444"
        android:textColor="@color/white"
        android:text="-" />
</LinearLayout><!-- 1,2,3,-のボタン -->
    <Space
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        />
    <LinearLayout
    android:layout_width="300dp"
    android:layout_height="75dp"
    android:layout_gravity="center"
    android:orientation="horizontal">


    <Button
        android:id="@+id/btn0"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:backgroundTint="#444444"
        android:textColor="@color/white"
        android:text="0" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:backgroundTint="#444444"
        android:textColor="@color/white"
        android:text="c" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btnequal"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:backgroundTint="#444444"
        android:textColor="@color/white"
        android:text="=" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btnpuls"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:backgroundTint="#444444"
        android:textColor="@color/white"
        android:text="+" />
</LinearLayout><!-- 0,c,=,+のボタン -->
</LinearLayout>